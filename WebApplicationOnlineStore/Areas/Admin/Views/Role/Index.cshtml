@model List<RoleViewModel>

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0 bg-secondary rounded-4">
            <div class="text-white"><h1>Список ролей</h1></div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Роль</th>
                        <th scope="col"><a asp-area="Admin" asp-controller="Role" asp-action="Add" class="btn btn-sm btn-success">Добавить новую роль</a></th>
                    </tr>
                </thead>

                <tbody class="table-group-divider">
                    @foreach (var role in Model)
                    {
                        <tr>
                            <th scope="row">@(Model.IndexOf(role) + 1)</th>
                            <td>@role.Name</td>
                            <td><a asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-name="@role.Name" class="btn btn-danger">Удалить</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>