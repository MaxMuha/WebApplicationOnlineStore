@model Role

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0">
            <form method="post">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">
                        <div class="content">
                            <div class="header">
                                <h1 class="title fs-5">Создание новой роли</h1>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

                            <div>
                                <input asp-for="Name" class="form-control" placeholder="Имя роли" />
                                <span asp-validation-for="Name"></span>
                            </div><br>

                            <p><button asp-area="Admin" asp-controller="Role" asp-action="Add" class="btn btn-primary">Создать</button></p>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
