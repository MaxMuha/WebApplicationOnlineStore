@model CreateProductViewModel

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0">
            <form method="post" enctype="multipart/form-data">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Создание нового продукта</h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

                        <div>
                            <input asp-for="Name" class="form-control" placeholder="Имя продукта" />
                            <span asp-validation-for="Name"></span>
                        </div><br>

                        <div>
                            <input asp-for="Description" class="form-control" placeholder="Описание продука" />
                            <span asp-validation-for="Description"></span>
                        </div><br>

                        <div>
                            <input asp-for="Cost" class="form-control" placeholder="Цена продукта" />
                            <span asp-validation-for="Cost"></span>
                        </div><br>

                        <div>
                            <input asp-for="UploadedFiles" name="UploadedFiles" class="form-control" type="file" placeholder="загрузить картинку" accept="image/*" multiple />
                            <span asp-validation-for="UploadedFiles"></span>
                        </div><br>
                        <div class="footer">
                            <button asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">Создать</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
