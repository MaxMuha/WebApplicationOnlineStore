@model EditProductViewModel

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0">
            <form method="post" enctype="multipart/form-data">
                <div class="row text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4 text-start">

                        <h1 class="title fs-5 text-center">Редактирование данных</h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>
                        <div>
                            <input type="hidden" asp-for="Id" value="@Model?.Id" />
                            <span asp-validation-for="Id"></span>
                        </div><br>
                        <div>
                            <label class="form-label">Наименование товара</label>
                            <input asp-for="Name" value="@Model?.Name" class="form-control" />
                            <span asp-validation-for="Name"></span>
                        </div><br>

                        <div>
                            <label class="form-label">Описание</label>
                            <input asp-for="Description" value="@Model?.Description" class="form-control" />
                            <span asp-validation-for="Description"></span>
                        </div><br>

                        <div>
                            <label class="form-label">Цена</label>
                            <input asp-for="Cost" value="@Model?.Cost" class="form-control" />
                            <span asp-validation-for="Cost"></span>
                        </div><br>

                        <div>
                            <input type="hidden" asp-for="@Model.ImagesPaths" value="@Model.ImagesPaths"/>
                            <label class="form-label">Изображения</label>
                            @foreach (var imagePath in Model.ImagesPaths)
                            {
                                <div>
                                    <img src="@imagePath" alt="Изображение товара">
                                </div>
                            }
                        </div><br>

                        <div>
                            <input asp-for="UploadedFiles" name="UploadedFiles" class="form-control" type="file" placeholder="загрузить изображения" accept="image/*" multiple />
                            <span asp-validation-for="UploadedFiles"></span>
                        </div><br>

                        <p class="text-center">
                            <button asp-area="Admin" asp-controller="Product" asp-action="Edit" class="btn btn-primary">Сохранить изменения</button>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

