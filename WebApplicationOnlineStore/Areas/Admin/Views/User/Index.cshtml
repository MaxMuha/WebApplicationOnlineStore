@model List<UserViewModel>

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0 bg-secondary rounded-4">

            <div class ="text-white"><h1>Список пользователей</h1></div>

            <table class="table">

                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Имя(логин)</th>
                        <th scope="col">Роль</th>
                        <th scope="col"><a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-sm btn-success">Добавить нового пользователя</a></th>
                    </tr>
                </thead>

                <tbody class="table-group-divider">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th scope="row">@(Model.IndexOf(user) + 1)</th>
                            <td>@user.Name</td>
                            <td>@user.Role</td>
                            <td></td>
                            <td><a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-name="@user.Name" class="btn btn-primary">Изменить</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>