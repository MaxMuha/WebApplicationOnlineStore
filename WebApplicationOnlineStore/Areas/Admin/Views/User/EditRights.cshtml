@model EditRightsViewModel


<form method="post">
    <div class="container overflow-hidden text-center">
        <div class="row">
            <div class="col-2 ps-0">
                <div>@await Html.PartialAsync("AdminMenu")</div>
            </div>
            <div class="col-10 p-0">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Права доступа пользователя @Model.UserName</h1>

                        <input type="hidden" name="name" value="@Model.UserName">

                        @foreach (var role in Model.AllRoles)
                        {
                            <div class="text-start">
                                @if (Model.UserRoles.Contains(role))
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="userRolesViewModel[@role.Name]" value="true" id="flexCheckChecked" checked />
                                        <label class="form-check-label" for="flexCheckChecked">
                                            @role.Name
                                        </label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="userRolesViewModel[@role.Name]" value="true" id="flexCheckDefault" />
                                        <label class="form-check-label" for="flexCheckDefault">
                                            @role.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        }
                        <div class="pb-2">
                            <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="User" asp-action="EditRights">Изменить</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>