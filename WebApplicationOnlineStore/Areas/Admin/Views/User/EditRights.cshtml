@model UserViewModel


<form method="post">
    <div class="container overflow-hidden text-center">
        <div class="row">
            <div class="col-2 ps-0">
                <div>@await Html.PartialAsync("AdminMenu")</div>
            </div>
            <div class="col-10 p-0">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Права доступа пользователя @Model.Name</h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

                        <input type="hidden" asp-for="Name" value="@Model?.Name" />
                        <span asp-validation-for="Name"></span>

                        <div>
                            <input asp-for="Role.Name" value="@Model?.Role.Name" />
                            <span asp-validation-for="Role.Name"></span>
                        </div><br>

                        <p><a asp-area="Admin" asp-controller="User" asp-action="EditRights" class="btn btn-primary">Изменить</a></p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>