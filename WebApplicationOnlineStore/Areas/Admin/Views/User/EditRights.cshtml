@model EditRightsViewModel


<form method="post">
    <div class="container overflow-hidden text-center">
        <div class="row">
            <div class="col-2 ps-0">
                <div>@await Html.PartialAsync("AdminMenu")</div>
            </div>
            <div class="col-10 p-0">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Права доступа пользователя @Model.UserName</h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>


                        <input type="hidden" asp-for="UserName" value="@Model.UserName" />
                        <span asp-validation-for="UserName"></span>

                        @foreach(var role in Model.AllRoles)
                        {
                            <div>
                                @if(Model.UserRoles.Contains(role))
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="userRolesViewModel[@role.Name]" id="flexDefault1" value="true" checked>
                                        <label class="form-check-label" for="flexDefault1">
                                            @role.Name
                                        </label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="userRolesViewModel[@role.Name]" id="flexDefault1" value="true">
                                        <label class="form-check-label" for="flexDefault1">
                                            @role.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        }

                        <p><a asp-area="Admin" asp-controller="User" asp-action="EditRights" type="submit" class="btn btn-primary">Изменить</a></p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>