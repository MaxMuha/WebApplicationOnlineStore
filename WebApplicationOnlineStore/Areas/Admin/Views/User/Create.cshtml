@model Register

<form method="post">
    <div class="container overflow-hidden text-center">
        <div class="row">
            <div class="col-2 ps-0">
                <div>@await Html.PartialAsync("AdminMenu")</div>
            </div>
            <div class="col-10 p-0">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Создание нового пользователя</h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

                        <div>
                            <input asp-for="UserName" class="form-control" placeholder="Логин" />
                            <span asp-validation-for="UserName"></span>
                        </div><br>

                        <div>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" />
                            <span asp-validation-for="Password"></span>
                        </div><br>

                        <div>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div><br>

                        <p><button asp-area="Admin" asp-controller="User" asp-action="Create" type="submit" class="btn btn-success">Создать</button></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
