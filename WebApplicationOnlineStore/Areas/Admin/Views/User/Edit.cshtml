@model UserViewModel

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0">
            <form method="post">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Редактирование данных</h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>
                        <div>
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <span asp-validation-for="Id"></span>

                            <input type="hidden" asp-for="Password" value="@Model.Password" />
                            <span asp-validation-for="Password"></span>

                            <input type="hidden" asp-for="Role.Name" value="@Model?.Role" />
                            <span asp-validation-for="Role.Name"></span>

                            <div>
                                <input asp-for="Name" value="@Model.Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div><br>

                            <p><button asp-area="Admin" asp-controller="User" asp-action="Edit" class="btn btn-primary">Сохранить изменения</button></p>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

