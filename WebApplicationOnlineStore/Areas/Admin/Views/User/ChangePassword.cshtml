@model ChangePassword

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0">

            <form method="post">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Смена пароля</h1>

                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

                        <input type="hidden" asp-for="Id" value="@Model?.Id" />
                        <span asp-validation-for="Id"></span>

                        <input type="hidden" asp-for="UserName" value="@Model?.UserName" />
                        <span asp-validation-for="UserName"></span>

                        <div>
                            <input asp-for="Password" class="form-control" placeholder="Пароль" />
                            <span asp-validation-for="Password"></span>
                        </div><br>
                        <div>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердить пароль" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div><br>

                        <p>
                            <button asp-area="Admin" asp-controller="User" asp-action="ChangePassword" class="btn btn-primary">Сохранить изменения</button>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

