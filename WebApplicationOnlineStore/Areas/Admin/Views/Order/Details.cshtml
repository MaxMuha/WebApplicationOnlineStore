@model OrderViewModel
@{
    ViewData["Title"] = "Order Page";
}

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0">
            <form method="post">
                <div class="row text-white container">
                    <div class="shadow bg-secondary rounded-4">

                        <h1 class="text-center">Подробнее о заказе</h1>

                        <table class="table text-start">

                            <thead>
                                <tr>
                                    <th scope="col">Наименование</th>
                                    <th scope="col">Данные заказа</th>
                                </tr>
                            </thead>

                            <tbody class="table-group-divider">
                                <tr>
                                    <th scope="row">Дата и время</th>
                                    <td>@Model.CreateDateTime</td>
                                </tr>
                                <tr>
                                    <th scope="row">Адресс доставки</th>
                                    <td>
                                        @Model.Form.City
                                        @Model.Form.Region
                                        @Model.Form.Address
                                        @Model.Form.PostalCode
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Получатель</th>
                                    <td>
                                        @Model.Form.FirstName
                                        @Model.Form.LastName
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Телефон</th>
                                    <td>@Model.Form.Phone</td>
                                </tr>
                                <tr>
                                    <th scope="row">Сумма заказа</th>
                                    <td>@Model.Total</td>
                                </tr>
                                <tr>
                                    <th scope="row">Статус заказа</th>
                                    <td>
                                        <select asp-for="@Model.Status"
                                                asp-items="@Html.GetEnumSelectList<OrderStatusViewModels>()"
                                                class="form-control">
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row"><button asp-area="Admin" asp-controller="Order" asp-action="UpdateStatus" asp-route-orderId="@Model.Id" class="btn btn-success">Сохранить изменения</button></th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>