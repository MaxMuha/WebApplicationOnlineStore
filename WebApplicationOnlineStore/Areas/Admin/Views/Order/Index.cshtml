@model List<OrderViewModel>
@{
    ViewData["Title"] = "Order List Page";
}

<div class="container overflow-hidden text-center">
    <div class="row">
        <div class="col-2 ps-0">
            <div>@await Html.PartialAsync("AdminMenu")</div>
        </div>
        <div class="col-10 p-0 bg-secondary rounded-4">
            <div class="text-white"><h1>Список заказов</h1></div>

            <table class="table">

                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Сумма</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Пользователь(логин)</th>
                        <th scope="col">Дата</th>
                        <th scope="col">Время</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                <tbody class="table-group-divider">
                    @foreach (var order in Model)
                    {
                        <tr>
                            <th scope="row">@(Model.IndexOf(order) + 1)</th>
                            <td>@order.Total</td>
                            <td>@EnumHelper.GetDisplayName(order.Status)</td>
                            <td>Пользователь(логин)</td>
                            <td>@order.CreateDateTime.ToShortDateString()</td>
                            <td>@order.CreateDateTime.ToShortTimeString()</td>
                            <td> <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@order.Id" class="btn btn-primary">Подробнее</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>