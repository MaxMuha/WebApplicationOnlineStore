@model Register

<form method="post">
    <div class="row text-md-center text-white container justify-content-center mb-3">
        <div class="shadow bg-secondary col-md-3 rounded-4">

            <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>

            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

            <label class="form-label fs-2">Регистрация</label>

            <div>
                <input asp-for="UserName" class="form-control" placeholder="Логин" />
                <span asp-validation-for="UserName"></span>
            </div><br>

            <div>
                <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="Password"></span>
            </div><br>

            <div>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div><br>

            <p><button asp-controller="Account" asp-action="Register" type="submit" class="btn btn-success">Зарегистрироваться</button></p>
        </div>
    </div>
    <div class="row text-md-center container justify-content-center">
        <a class="btn btn-sm btn-primary col-md-3 rounded-4" asp-controller="Account" asp-action="Login">Войти в аккаунт</a>
    </div>
</form>