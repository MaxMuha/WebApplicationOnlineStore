@model UserViewModel
@{
    ViewData["Title"] = "Profile page";
}
<form method="post" enctype="multipart/form-data">
    <div class="container overflow-hidden text-center">
        <div class="row">
            <div class="col-2 ps-0">
                <div>@await Html.PartialAsync("ProfileMenu")</div>
            </div>
            <div class="col-10 p-0">
                <div class="row text-md-center text-white container justify-content-center mb-3">
                    <div class="shadow bg-secondary col-md-3 rounded-4">

                        <h1 class="title fs-5">Профиль</h1>
                        <div>

                            <div>
                                <input asp-for="Name" value="@Model.Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div><br>

                            @* <div>
                                <input type="hidden" asp-for="Role" value="@Model.Role" class="form-control" />
                                <span asp-validation-for="Role"></span>
                            </div> *@

                            <div>
                                <input type="hidden" asp-for="Password" value="@Model.Password" class="form-control" />
                                <span asp-validation-for="Password"></span>
                            </div>

                            <div>
                                <input type="hidden" asp-for="@Model.AvatarPath" value="@Model.AvatarPath" />
                                <label class="form-label">Аватарка</label>
                                <div>
                                    <img src="@Model.AvatarPath" width="100" alt="Изображение товара">
                                </div>
                            </div><br>

                            <div>
                                <input asp-for="UploadedFile" name="UploadedFile" class="form-control" type="file" placeholder="Загрузить изображение" accept="images/*" multiple />
                                <span asp-validation-for="UploadedFile"></span>
                            </div><br>

                            <p><button asp-controller="Account" asp-action="Edit" type="submit" class="btn btn-primary">Сохранить</button></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
