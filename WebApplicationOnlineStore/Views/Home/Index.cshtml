@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExampleCaptions" class="carousel slide mb-3">
    <div class="carousel-indicators mb-0">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner rounded-4">
        <div class="carousel-item active">
            <img src="~/image/Carousel/laptop/Frame 1 (1).png" class="d-block object-fit-none" alt="Ноутбуки">
            <div class="carousel-caption  d-none d-md-block text-start">
                <h5>Ноутбуки</h5>
                <p class="opacity-75">Равным образом, внедрение современных методик.</p>
                <a class="btn btn-sm btn-primary rounded-5" href="#">Перейти в каталог</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/Carousel/headphones/Frame 2 (2).png" class="d-block object-fit-none" alt="Наушники">
            <div class="carousel-caption  d-none d-md-block text-start">
                <h5>Наушники</h5>
                <p class="opacity-75">В рамках спецификации современных стандартов.</p>
                <a class="btn btn-sm btn-primary rounded-5" href="#">Перейти в каталог</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/Carousel/watch/Frame 4 (1).png" class="d-block object-fit-none" alt="Часы">
            <div class="carousel-caption  d-none d-md-block text-start">
                <h5>Часы</h5>
                <p class="opacity-75">Но сплочённость команды профессионалов.</p>
                <a class="btn btn-sm btn-primary rounded-5" href="#">Перейти в каталог</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Предыдущий</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Следующий</span>
    </button>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-3 mb-sm-0">
            <div class="card border-0 mb-3">
                <img class="card-img rounded-4" alt="Наушники" src="@product.ImgLink">
                <div class="card-img-overlay text-white">
                    <div class="pt-5">
                        <a asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" class="card-title"><h5>@product.Name</h5></a>
                        <p class="card-text bg-opacity-50">@product.Cost руб</p>
                        <div class="d-grid hstack gap-4 d-md-block mx-auto clearfix ">
                            <a asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-sm btn-success rounded-5 float-start">В корзину</a>
                            <a asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" class="btn btn-sm btn-primary rounded-5 float-end">Подробнее</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>