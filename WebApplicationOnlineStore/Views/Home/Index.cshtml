@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExampleCaptions" class="carousel slide mb-3">
    <div class="carousel-indicators mb-0">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="shadow carousel-inner rounded-4">
        <div class="carousel-item active">
            <img src="~/image/Carousel/laptop/Frame 1 (1).png" class="img-fluid d-block" alt="Ноутбуки">
            <div class="carousel-caption  d-none d-md-block text-start">
                <h5>Ноутбуки</h5>
                <p class="opacity-75">Равным образом, внедрение современных методик.</p>
                <a class="btn btn-sm btn-primary rounded-5" href="#">Перейти в каталог</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/Carousel/headphones/Frame 2 (2).png" class="img-fluid d-block" alt="Наушники">
            <div class="carousel-caption  d-none d-md-block text-start">
                <h5>Наушники</h5>
                <p class="opacity-75">В рамках спецификации современных стандартов.</p>
                <a class="btn btn-sm btn-primary rounded-5" href="#">Перейти в каталог</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/Carousel/watch/Frame 4 (1).png" class="img-fluid d-block" alt="Часы">
            <div class="carousel-caption  d-none d-md-block text-start">
                <h5>Часы</h5>
                <p class="opacity-75">Но сплочённость команды профессионалов.</p>
                <a class="btn btn-sm btn-primary rounded-5" href="#">Перейти в каталог</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Предыдущий</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Следующий</span>
    </button>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-3 mb-sm-0">
            <div class="card border-0 mb-3">
                <img class="shadow card-img rounded-4" alt="Наушники" src="@product.ImagePath">
                <div class="card-img-overlay text-white">
                    <div class="pt-5">
                        <a asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" class="card-title"><h5>@product.Name</h5></a>
                        <p class="card-text">@product.Cost руб</p>
                        <div class="d-grid hstack gap-4 d-md-block mx-auto clearfix text-center">
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-sm btn-success">В корзину</a>
                                <a asp-controller="Product" asp-action="Index" asp-route-productId="@product.Id" class="btn btn-sm btn-primary">Подробнее</a>
                                <a asp-controller="WatchList" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-sm btn-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
